<view>录音和播放测试页面...</view>
<audio poster="{{poster}}" name="{{name}}" author="{{author}}" src="{{src}}"
id="myAudio" controls loop bindplay="funplay"
 bindpause="funpause" bindtimeupdate="funtimeupdate"
 bindended="funended" binderror="funerror" style="width: 610rpx; height: 134rpx; display: inline-block; box-sizing: border-box">
</audio>
<view wx:if="{{isSpeaking}}">
  <image class="sound-style" src= "../../images/recorder.gif"
  style="position: absolute; left: 158rpx; top: -58rpx; width: 218rpx; height: 154rpx; display: block; box-sizing: border-box">
  </image>
</view>
<template is="2836c143" data="{{ ...$root['0'], $root }}"/>
<button class="button-style" bindtap='start' style="top: 752rpx">开始录音</button>
<button class="button-style" bindtap='stop' style="top: 779rpx">停止录音</button>
<button class="button-style" type="primary" bindtap='openRecording' style="top: -22rpx">开始录音测试</button>
<button class="button-style" type="primary" bindtap='shutRecording'>结束录音测试</button>
<button  class="button-style" bindtap='audioPlay' style="top: 22rpx">播放录音</button>
<button  class="button-style"  bindtap="audioPause" style="top: 48rpx">暂停</button>
<button  class="button-style" bindtap="audioRestart" style="top: 76rpx">重新开始播放</button>